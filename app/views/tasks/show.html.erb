<h1 class="display-4"><%= @task.title %></h1>
<p class="lead"><%= @task.details %></p>
<p class="text-muted">
  <%= @task.completed ? "Task is completed." : "Task is not completed yet." %>
</p>

<div class="mt-4">
  <%= link_to "Back to list", tasks_path, class: "btn btn-secondary" %>
  <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-warning ms-2" %>
</div>
